# freee OAuth 2.0 認証情報
# freee Developers (https://developer.freee.co.jp/) で取得
FREEE_CLIENT_ID=your_client_id_here
FREEE_CLIENT_SECRET=your_client_secret_here
FREEE_REDIRECT_URI=http://localhost:8080/callback

# token暗号化キー（32バイトのランダム文字列）
# 生成方法: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())"
TOKEN_ENCRYPTION_KEY=your_encryption_key_here

# freee API設定
FREEE_BASE_URL=https://api.freee.co.jp
FREEE_COMPANY_ID=1234567

# token保存先（デフォルト: ~/.freee-mcp/tokens.enc）
# TOKEN_FILE_PATH=~/.freee-mcp/tokens.enc
